; polybar config
; set filetype=dosini

[colors]
bg = #1E2224
fg = #98C7D8

[bar/main]
width = 100%
height = 45

background = ${colors.bg}
foreground = ${colors.fg}

padding-right = 2
padding-top = 2

modules-center = date
modules-left = bspwm
modules-right = wireless-network backlight battery

module-margin = 2

font-0 = "FiraCode-Regular:size=11"
font-1 = "Siji:pixelsize=10"

[module/date]
type = internal/date
interval = 5
date-alt = "%d.%m.%y"

time = %H:%M

label = %date% %time%

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused = " %index% "
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.fg}

label-empty = 
label-occupied = " %index% "

[module/wireless-network]
type = internal/network
interface = wlp4s0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = %{T0}%{T-} %essid% 
label-disconnected = x

[module/backlight]
type = internal/backlight
card = amdgpu_bl0

format = %{T1}%{T-} <label>
label = %percentage%%


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99

format-charging = %{T1}%{T-} <label-charging>
label-charging = %percentage%%

format-discharging = %{T1}%{T-} <label-discharging>
label-discharging = %percentage%%
