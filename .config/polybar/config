; polybar config
; set filetype=dosini

[colors]
bg = #1E2224
fg = #e5a8ef 

[bar/main]
width = 25%
height = 45

background = ${colors.bg}
foreground = ${colors.fg}

padding-right = 2
padding-top = 2

offset-x = 37.5%

modules-center = date
modules-left = bspwm
modules-right = battery

font-0 = "FiraCode-Regular:size=11"
font-1 = "Siji:pixelsize=10"

[module/date]
type = internal/date
interval = 5
date-alt = "%d.%m.%y"

time = %H:%M

label = %date% %time%

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused = " %index% "
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.fg}

label-empty = 
label-occupied = " %index% "

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99

format-charging = <label-charging>
label-charging = %percentage%%

format-discharging = <label-discharging>
label-discharging = %percentage%%
